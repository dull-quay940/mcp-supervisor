# MCP Supervisor Environment Configuration

# Safety: Set to 'true' to allow destructive/autonomous actions
# WARNING: Keep this 'false' in production unless you fully understand the risks
ALLOW_AUTONOMY=false

# HTTP API Port for the Supervisor
SUPERVISOR_PORT=3001

# Logging Configuration
LOG_PATH=./logs/actions.log

# Agent Runtime Limits
# Maximum runtime for any single agent (5 minutes default)
MAX_AGENT_RUNTIME_MS=300000

# Maximum number of retry attempts for failed agents
MAX_AGENT_RETRIES=2

# Docker Configuration
# Set to 'true' to enable Docker-based sandboxing (recommended for production)
DOCKER_ENABLED=true

# Server Configuration
# Your VPS IP address for deployment
SERVER_IP=62.72.26.113

# Node Environment
NODE_ENV=development
